<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:base="clr-namespace:Dopamine.Core.Base;assembly=Dopamine.Core"
                    xmlns:converters="clr-namespace:Dopamine.Converters">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/Dopamine;component/Resources/Styles/FontStyles.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <converters:AddEllipsisConverter x:Key="AddEllipsisConverter" />

    <!--  ContextMenu  -->
    <ContextMenu x:Key="ListBoxPlaylistsContextMenu" x:Shared="False">
        <MenuItem Command="{Binding ViewPlaylistInExplorerCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type UserControl}}}"
                  Header="{DynamicResource Language_View_In_Explorer}"
                  InputGestureText="{DynamicResource Language_Ctrl_E}" />
        <MenuItem Command="{Binding OpenInM3UManagerCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type UserControl}}}" Header="{DynamicResource Language_Open_With_M3U_Manager}" />
        <Separator />
        <MenuItem Command="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=DataContext.EditSelectedPlaylistCommand}"
                  Header="{DynamicResource Language_Rename}"
                  InputGestureText="{DynamicResource Language_Key_F2}" />
        <MenuItem Command="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=DataContext.DeleteSelectedPlaylistCommand}"
                  Header="{DynamicResource Language_Delete}"
                  InputGestureText="{DynamicResource Language_Key_Del}" />
        <Separator />
        <MenuItem Command="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=DataContext.AddPlaylistToNowPlayingCommand}" Header="{DynamicResource Language_Add_To_Now_Playing}" />
        <Separator />
        <MenuItem Command="{Binding DataContext.ShuffleSelectedPlaylistCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type UserControl}}}" Header="{DynamicResource Language_Shuffle}">
            <MenuItem.Icon>
                <TextBlock Margin="0,1,0,0"
                           FontSize="15"
                           Style="{StaticResource SegoeAssets}"
                           Text="&#xE8B1;" />
            </MenuItem.Icon>
        </MenuItem>
    </ContextMenu>

    <!--  ListBoxItem  -->
    <Style x:Key="ListBoxPlaylistsItem" TargetType="{x:Type ListBoxItem}">
        <Setter Property="FocusVisualStyle" Value="{x:Null}" />
        <Setter Property="Margin" Value="0,0,0,2" />
        <Setter Property="HorizontalAlignment" Value="Stretch" />
        <Setter Property="Foreground" Value="{DynamicResource Brush_PrimaryText}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ListBoxItem}">
                    <DockPanel Width="{Binding Path=ActualWidth, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type ScrollContentPresenter}}}" Background="{TemplateBinding Background}">
                        <Grid>
                            <Border x:Name="MouseHoverHelper"
                                    Height="32"
                                    Background="{DynamicResource Brush_ItemHovered}"
                                    Opacity="0" />
                            <Border x:Name="DragBorder"
                                    Height="32"
                                    Panel.ZIndex="0"
                                    Background="{DynamicResource Brush_ItemHovered}"
                                    Opacity="0" />
                            <Border Height="32"
                                    Margin="10,0,10,0"
                                    Panel.ZIndex="1">
                                <DockPanel>
                                    <Button x:Name="DeletePlaylistButton"
                                            VerticalAlignment="Center"
                                            Command="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=DataContext.DeletePlaylistCommand}"
                                            CommandParameter="{Binding}"
                                            DockPanel.Dock="Right"
                                            Style="{DynamicResource TransparentButton}"
                                            ToolTip="{DynamicResource Language_Delete_This_Playlist}"
                                            Visibility="Collapsed">
                                        <TextBlock Margin="0,0,7,0"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   DockPanel.Dock="Right"
                                                   FontSize="12"
                                                   Style="{StaticResource SegoeAssets}"
                                                   Text="&#xE894;" />
                                    </Button>
                                    <DockPanel>
                                        <Grid>
                                            <TextBlock Margin="0,0,10,0"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"
                                                       DockPanel.Dock="Left"
                                                       FontSize="16"
                                                       Foreground="{DynamicResource Brush_Accent}"
                                                       Style="{StaticResource SegoeAssets}"
                                                       Text="&#xEA37;"
                                                       Visibility="{Binding IsSmartPlaylist, Converter={StaticResource InvertingBooleanToVisibilityConverter}}" />
                                            <TextBlock Margin="0,0,10,0"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"
                                                       DockPanel.Dock="Left"
                                                       FontSize="16"
                                                       Foreground="{DynamicResource Brush_Accent}"
                                                       Style="{StaticResource SegoeAssets}"
                                                       Text="&#xE1CA;"
                                                       Visibility="{Binding IsSmartPlaylist, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                        </Grid>
                                        <TextBlock Margin="2,0,2,0"
                                                   HorizontalAlignment="Stretch"
                                                   VerticalAlignment="Center"
                                                   FontSize="13"
                                                   Text="{Binding Name}"
                                                   TextTrimming="CharacterEllipsis"
                                                   ToolTip="{Binding Name}" />
                                    </DockPanel>
                                </DockPanel>
                            </Border>
                            <Grid.Triggers>
                                <EventTrigger RoutedEvent="Button.DragEnter">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="DragBorder"
                                                             Storyboard.TargetProperty="Opacity"
                                                             From="0"
                                                             To="1"
                                                             Duration="0:0:0.01" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                                <EventTrigger RoutedEvent="Button.DragLeave">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="DragBorder"
                                                             Storyboard.TargetProperty="Opacity"
                                                             From="1"
                                                             To="0"
                                                             Duration="0:0:0.01" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Grid.Triggers>
                        </Grid>
                    </DockPanel>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="DeletePlaylistButton" Property="Visibility" Value="Visible" />
                        </Trigger>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="{DynamicResource Brush_ItemSelected}" />
                        </Trigger>
                        <EventTrigger RoutedEvent="MouseEnter">
                            <BeginStoryboard>
                                <Storyboard TargetProperty="Opacity" Storyboard.TargetName="MouseHoverHelper">
                                    <DoubleAnimation To="1" Duration="{x:Static base:Constants.MouseEnterDuration}" />
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                        <EventTrigger RoutedEvent="MouseLeave">
                            <BeginStoryboard>
                                <Storyboard TargetProperty="Opacity" Storyboard.TargetName="MouseHoverHelper">
                                    <DoubleAnimation To="0" Duration="{x:Static base:Constants.MouseLeaveDuration}" />
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--  ListBox  -->
    <Style x:Key="ListBoxPlaylists" TargetType="{x:Type ListBox}">
        <Setter Property="FocusVisualStyle" Value="{x:Null}" />
        <Setter Property="ContextMenu" Value="{StaticResource ListBoxPlaylistsContextMenu}" />
        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="ItemContainerStyle" Value="{DynamicResource ListBoxPlaylistsItem}" />
        <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto" />
        <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Hidden" />
    </Style>
</ResourceDictionary>
